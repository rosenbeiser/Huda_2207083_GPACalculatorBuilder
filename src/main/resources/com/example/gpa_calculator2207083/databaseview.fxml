<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" maxHeight="600.0" maxWidth="500.0" prefHeight="600.0" prefWidth="500.0" spacing="10.0" styleClass="root-pane" stylesheets="@databaseview.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gpa_calculator2207083.DatabaseController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>

    <children>
        <VBox alignment="CENTER" spacing="3.0" styleClass="header-section">
            <children>
                <Text styleClass="title-text" text="Database Manager" />
                <Text styleClass="subtitle-text" text="View and manage all saved semesters" />
            </children>
            <VBox.margin>
                <Insets bottom="8.0" />
            </VBox.margin>
        </VBox>

        <VBox fillWidth="true" spacing="12.0" styleClass="card" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>

            <children>
                <HBox alignment="CENTER">
                    <ProgressIndicator fx:id="progressIndicator" prefHeight="30.0" prefWidth="30.0" visible="false" />
                </HBox>

                <HBox alignment="CENTER" prefHeight="92.0" prefWidth="525.0" spacing="20.0" styleClass="stats-section">
                    <children>
                        <VBox alignment="CENTER" minWidth="129.0" prefHeight="79.0" prefWidth="129.0" spacing="5.0" styleClass="stat-box">
                            <children>
                                <Label styleClass="stat-label" text="Total Semesters" />
                                <Label fx:id="lblTotalSemesters" styleClass="stat-value" text="0" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="5.0" styleClass="stat-box">
                            <children>
                                <Label styleClass="stat-label" text="Total Credits" />
                                <Label fx:id="lblTotalCredits" styleClass="stat-value" text="0.0" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="5.0" styleClass="stat-box">
                            <children>
                                <Label styleClass="stat-label" text="Cumulative GPA" />
                                <Label fx:id="lblCumulativeGPA" styleClass="stat-value" text="0.00" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <Separator />

                <VBox prefHeight="173.0" prefWidth="525.0" spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label styleClass="section-header" text="SAVED SEMESTERS" />

                        <TableView fx:id="semesterTable" minHeight="102.0" prefHeight="102.0" prefWidth="525.0" styleClass="semester-table" VBox.vgrow="SOMETIMES">
                            <columns>
                                <TableColumn fx:id="colSemesterName" prefWidth="150.0" text="Semester Name" />
                                <TableColumn fx:id="colGPA" prefWidth="80.0" text="GPA" />
                                <TableColumn fx:id="colCredits" prefWidth="80.0" text="Credits" />
                                <TableColumn fx:id="colDate" prefWidth="140.0" text="Date Created" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>

                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="btnLoad" mnemonicParsing="false" onAction="#loadSemester" prefHeight="30.0" prefWidth="100.0" styleClass="action-button" text="ðŸ“‚ Load" />
                                <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#deleteSemester" prefHeight="30.0" prefWidth="100.0" styleClass="action-button" text="ðŸ—‘ï¸ Delete" />
                                <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#refreshData" prefHeight="30.0" prefWidth="100.0" styleClass="action-button" text="ðŸ”„ Refresh" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <Separator />

                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label fx:id="lblSelectedSemester" styleClass="section-header" text="Select a semester to view courses" />

                        <TableView fx:id="courseTable" minHeight="83.0" prefHeight="113.0" prefWidth="525.0" styleClass="course-table" VBox.vgrow="SOMETIMES">
                            <columns>
                                <TableColumn fx:id="colCourseCode" prefWidth="70.0" text="Code" />
                                <TableColumn fx:id="colCourseName" prefWidth="120.0" text="Course Name" />
                                <TableColumn fx:id="colCredit" prefWidth="50.0" text="Credit" />
                                <TableColumn fx:id="colGrade" prefWidth="50.0" text="Grade" />
                                <TableColumn fx:id="colTeacher1" prefWidth="80.0" text="Teacher 1" />
                                <TableColumn fx:id="colTeacher2" prefWidth="80.0" text="Teacher 2" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

                <Separator />

                <HBox alignment="CENTER">
                    <children>
                        <Button fx:id="btnClose" mnemonicParsing="false" onAction="#closeWindow" prefHeight="35.0" prefWidth="150.0" styleClass="close-button" text="âœ– Close" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
